@model PersonalBlog.CoreLayer.DTOs.Users.FilterUserDto
@{
    var count = 1;
}
<form method="get" asp-area="admin" asp-controller="User" asp-action="Index">
    <div style="margin: 10px;grid-gap: 10px;display: flex;align-items: center;">
        <label>جستجو</label>
        <input type="text" value="@Model.Param.SearchTerm" name="search" id="search">

        <button type="submit" class="btn btn-info btn-sm">فیلتر</button>
    </div>
</form>

<div class="box box-primary">
    <div class="box box-body p-0">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام کاربری</th>
                    <th>نام</th>
                    <th>دسترسی</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@count</td>
                        <td>@user.UserName</td>
                        <td>@user.FullName</td>
                        <td>@user.Role.ToString()</td>
                        <td>
                            <a href="#" class="btn btn-info btn-sm" onclick="OpenModal(`/admin/user/UserEditModal?userId=${@user.UserId}`,'myModal','ویرایش کاربر')">
                                ویرایش
                            </a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
        <partial name="_Pagination" model="@Model" />
    </div>
</div>


