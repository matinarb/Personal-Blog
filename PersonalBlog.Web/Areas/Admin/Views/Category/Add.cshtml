@model AddCategoryViewModel
@{
    ViewData["Title"] = "افزودن دسته بندی";
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="admin" asp-controller="Category" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section>
    <div class="box box-primary">
        <form role="form" method="post" asp-area="admin" asp-controller="Category" asp-action="Add">
            <div class="box-body">
                <div class="col-md-6">
                    @Html.EditorFor(Model => Model.Title)
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(Model => Model.MetaTag)
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(Model => Model.MetaDescription)
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">ارسال</button>
            </div>
        </form>
    </div>

</section>